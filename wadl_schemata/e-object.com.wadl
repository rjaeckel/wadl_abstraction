        <wadl:request/>
        <wadl:response>
          <wadl:doc>
            <![CDATA[true if the association succeed]]>
          </wadl:doc>
          <wadl:representation mediaType="text/xml"/>
          <wadl:representation mediaType="application/json"/>
        </wadl:response>
      </wadl:method>
    </wadl:resource>
    <wadl:resource path="/rest/api/collections/{collectionId}/remove/{gatewayId}">
      <wadl:param name="collectionId" style="template">
        <wadl:doc>
          <![CDATA[id of the collection concerned]]>
        </wadl:doc>
